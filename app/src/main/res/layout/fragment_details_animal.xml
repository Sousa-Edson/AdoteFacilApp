<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".DetailsGalleryFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- TODO: Update blank fragment layout -->

            <ImageView
                android:id="@+id/fotoAnimalPrincipal"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="10dp"
                android:src="@drawable/amigoanimal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nomeAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Adoção de cães"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fotoAnimalPrincipal"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/descricaoAnimalLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="Descrição do animal"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fotoAnimalPrincipal"
                android:background="@color/fundo_escuro_claro"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/nomeAnimal" />


            <TextView
                android:id="@+id/descricaoAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="fdfdfddfdfdfdfdfdfdfdfdfdfdfdffdfdfddfdfdfdfdfdfdfdfdfdfdfdffdfdfddfdfdfdfdfdfdfdfdfdfdfdffdfdfddfdfdfdfdfdfdfdfdfdfdfdf"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fotoAnimalPrincipal"
                app:layout_constraintTop_toBottomOf="@+id/descricaoAnimalLabel" />

            <TextView
                android:id="@+id/observacaoAnimalLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="Observações gerais"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fotoAnimalPrincipal"
                android:background="@color/fundo_escuro_claro"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/descricaoAnimal" />
            <TextView
                android:id="@+id/observacaoAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="fdfdfddfdfdfdfdfdfdfdfdfdfdfdffdfdfddfdfdfdfdfdfdfdfdfdfdfdffdfdfddfdfdfdfdfdfdfdfdfdfdfdffdfdfddfdfdfdfdfdfdfdfdfdfdfdf"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fotoAnimalPrincipal"
                app:layout_constraintTop_toBottomOf="@+id/observacaoAnimalLabel" />

            <TextView
                android:id="@+id/idadeAnimalLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="Idade"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fotoAnimalPrincipal"
                android:background="@color/fundo_escuro_claro"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/observacaoAnimal" />

            <TextView
                android:id="@+id/idadeAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="1 ano e 2 meses"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fotoAnimalPrincipal"
                app:layout_constraintTop_toBottomOf="@+id/idadeAnimalLabel" />


            <TextView
                android:id="@+id/sexoAnimal"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="right|center"
                android:text="Macho "
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/fotoAnimalPrincipal"
                app:layout_constraintTop_toBottomOf="@+id/idadeAnimal" />
            <TextView
                android:id="@+id/recyclerViewFotoLabem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="Galeria de fotos deste PET"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fotoAnimalPrincipal"
                app:layout_constraintTop_toBottomOf="@+id/sexoAnimal" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                app:layout_constraintStart_toStartOf="@+id/fotoAnimalPrincipal"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewFotoLabem" />

            <Button
                android:id="@+id/botaoAdotar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Adotar"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:backgroundTint="@color/purple_700"
                android:layout_marginStart="10dp"

                android:layout_marginEnd="10dp"
                app:layout_constraintStart_toStartOf="@+id/fotoAnimalPrincipal"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewFoto"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
